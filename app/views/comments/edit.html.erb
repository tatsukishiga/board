<div class="main topic-new">
  <div class="container">
    <h1 class="form-heading">コメント編集</h1>
    <%= form_with(model: @comment, local: true) do |form| %>
      <div class="form">
        <div class="form-body">
          <% @comment.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p><%= form.label :content, "コメント" %></p>
            <%= form.text_field :content %>
            <%= form.submit "更新"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
